#!/usr/bin/env python3

import pathlib
import sys

import pspace

try:
    job_id = sys.argv[1]
except IndexError:
    info = pspace.get_last_info()
    try:
        job_id = info['job_info']['id']
    except KeyError:
        print("Can't determine job id.")
        exit(1)

job_info = pspace.get_job_info(job_id)

print("State: " + job_info['state'])
pspace.save_last_info(job_info)
